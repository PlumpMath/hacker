@import nib

.signup, .login
  padding: 2em

.field
  position: relative
  display: block

.signup-label, .login-label
  position: absolute
  left: 0
  margin-top: 10px
  font-size: 4em
  opacity: 0.7
  color: rgba(0,0,200,0.35)

.signup-input, .login-input
  border: none
  width: 80%
  font-family: monospace
  font-size: 5em
  position: relative
  margin-left: 5%
  
  &:focus
     outline: none

  &.parsley-error
    background: rgba(255,0,0,0.1)
  &.parsley-success
    background: rgba(0,255,0,0.1)

.signup-submit, .login-submit, .signup-redirect
  border: none
  padding: 10px
  background: none
  color: black
  font-size: 2em
  cursor: pointer
  font-family: monospace
  background: rgba(50,50,50,0.1)
  display: block
  width: 100%
  text-align: left
  overflow: hidden
  position: relative

  &.github, &.twitter
    background: rgba(255,255,0,0.2)
    margin-top: 20px

  &.twitter
    // not now
    display: none
    
  &:hover
    background: rgba(0,255,0,0.1)

    .login-icon
      color: rgba(255,0,255,0.3)

.new, .submit
  margin-top: 40px
  max-width: 500px
  .signup-redirect
    font-size: 1.5em

.login-icon
  font-family: 'login-icons'
  position: absolute
  right: 15px
  top: 8px
