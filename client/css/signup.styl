@import nib

.signup, .login
  padding: 2em

.field
  position: relative
  display: block

.signup-label, .login-label
  position: absolute
  left: 0
  margin-top: 10px
  font-size: 4em
  opacity: 0.7
  color: rgba(0,0,200,0.35)

.signup-input, .login-input
  border: none
  width: 80%
  font-family: monospace
  font-size: 5em
  position: relative
  margin-left: 5%
  
  &:focus
     outline: none

  &.ng-invalid.ng-dirty
    background: rgba(255,0,0,0.1)
  &.ng-valid
    background: rgba(0,255,0,0.1)

.signup-submit, .login-submit, .signup-redirect
  border: none
  padding: 10px
  background: none
  color: black
  font-size: 2em
  cursor: pointer
  font-family: monospace
  background: rgba(50,50,50,0.1)
  display: block
  width: 100%
  text-align: left
  overflow: hidden
    
  &:hover
    background: rgba(0,255,0,0.1)
  
  &[disabled]
    opacity: 0.5
    pointer-events: none
    background: rgba(255,0,0,0.2)

.new, .submit
  margin-top: 40px
  max-width: 500px
  .signup-redirect
    font-size: 1.5em

form.ng-valid
  .signup-submit
    display: block
  .signup-submit[disabled]
    display: none

form.ng-invalid
  .signup-submit
    display: none
  .signup-submit[disabled]
    display: block

