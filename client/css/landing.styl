@import nib

.landing
  padding: 2em

.landing-header
  font-family: "Signika+Negative", serif
  font-weight: 700
  font-size: 8em
  position: relative
  color: rgba(0,0,200,0.35)

  &:after
    content: 'welcome hacker'
    position: absolute
    left: 9px
    top: 4px
    color: rgba(200,0,0,0.35)

.field
  position: relative
  display: block

.landing-label
  position: absolute
  left: 0
  margin-top: 10px
  font-size: 4em
  opacity: 0.7
  color: rgba(0,0,200,0.35)

.landing-input
  border: none
  width: 80%
  font-family: monospace
  font-size: 5em
  position: relative
  margin-left: 5%
  
  &:focus
     outline: none

  &.ng-valid
    background: rgba(0,255,0,0.1)