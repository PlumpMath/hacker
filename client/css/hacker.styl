.profile-container
  width: 95%
  margin: 2em auto 0 auto

// header
.profile-name
  display: inline-block

// nav
.profile-nav-container
  display: inline-block
  margin-left: 2em
.profile-nav-link
  float: left
  font-size: 2em
  padding: 0.3em 1em
  margin-left: 0.5
  cursor: pointer
  position: relative
  top: 0.6em
  color: black
  &.about
    background: rgba(255,255,0,0.3)
  &.codes
    background: rgba(0,255,0,0.3)
  &.blog
    background: rgba(0,255,255,0.3)

// profile section
.profile-info-container
  margin-top: 0.5em
  width: 100%
  height: 500px
  padding-top: 2em
  &.about
    border-top: 0.75em solid rgba(255,255,0,0.3)
  &.codes
    border-top: 0.75em solid rgba(0,255,0,0.3)
  &.blog
    border-top: 0.75em solid rgba(0,255,255,0.3)
